@model TimetableSys_T17.RoundInfo
<title>Create</title>
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" href="/resources/demos/style.css">
<script>

$(function() {
    $( "#datepickerStart" ).datepicker({
        showOtherMonths: true,
        selectOtherMonths: true,
        minDate: 0,
        dateFormat: 'dd/mm/yy',
        onSelect: function ()
        {
            $("#startDate").val($("#datepickerStart").val());
        }
    });

    $("#datepickerEnd").datepicker({
        showOtherMonths: true,
        selectOtherMonths: true,
        minDate: 0,
        dateFormat: 'dd/mm/yy',
        onSelect: function ()
        {
            $("#endDate").val($("#datepickerEnd").val());
        }
    });
    
});

</script>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Create New Round</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div>@ViewBag.error</div>
        <div class="form-group">
           <p> </p>
        </div>
        @Html.HiddenFor(model => model.startDate, new {@id="startDate"})

        <div class="form-group">
            <p></p>
        </div>
        @Html.HiddenFor(model => model.endDate, new {@id="endDate"})
        
    </div>
    <table>
        <tr>
            <td>Start Date:</td>
            <td><input type="text" id="datepickerStart"></td>
        </tr>
        <tr>
            <td>End Date:</td>
            <td> <input type="text" id="datepickerEnd"></td>
        </tr>
        <tr>
            <td><div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div></td>
        </tr>
    </table>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>