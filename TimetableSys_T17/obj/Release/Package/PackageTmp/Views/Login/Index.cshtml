@model TimetableSys_T17.Models.LoginModel
@{
    Layout = null;
}
@Scripts.Render("~/bundles/modernizr")
@Styles.Render("~/Content/css")

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm())
        { 
            @Html.ValidationSummary(true, "");
           

        <div class="well"><fieldset>
    <div class="input-group">

        <span class="input-group-addon">
            <i class="glyphicon glyphicon-user"></i>
            @Html.TextBoxFor(x => x.deptIn, new { @class = "form-control", @placeholder = "Department" })
            @Html.ValidationMessageFor(x => x.deptIn)
        </span>

    </div>
    <div class="input-group">
        <span class="input-group-addon">
            <i class="glyphicon glyphicon-eye-close"></i>
            @Html.PasswordFor(x => x.password, new { @class = "form-control" })

        </span>

    </div>

    <input type="submit" class="btn btn-default btn-lg" value="Sign In" />
</fieldset>
</div>
    
        }
    </div>
</body>
</html>
