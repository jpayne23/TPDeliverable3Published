@model TimetableSys_T17.Models.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>


    <link href="/Content/jquery-ui.css" rel="stylesheet" />
    <link href="/Content/jquery-ui.structure.min.css" rel="stylesheet" />
    <link href="/Content/jquery-ui.theme.css" rel="stylesheet" />
    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <link href="/Content/site.css" rel="stylesheet" />

    <script src="/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm())
        { 
            @Html.ValidationSummary(true, "");
           

        <div class="well"><fieldset>
    <div class="input-group">

        <span class="input-group-addon">
            <i class="glyphicon glyphicon-user"></i>
            @Html.TextBoxFor(x => x.deptIn, new { @class = "form-control", @placeholder = "Department" })
            @Html.ValidationMessageFor(x => x.deptIn)
        </span>

    </div>
    <div class="input-group">
        <span class="input-group-addon">
            <i class="glyphicon glyphicon-eye-close"></i>
            @Html.PasswordFor(x => x.password, new { @class = "form-control" })

        </span>

    </div>

    <input type="submit" class="btn btn-default btn-lg" value="Sign In" />
</fieldset>
</div>
    
        }

        <script src="/Scripts/jquery-2.1.3.js"></script>
        <script src="/Scripts/jquery-ui.js"></script>
        <script src="/Scripts/jquery.validate.js"></script>
        <script src="/Scripts/jquery.validate.unobtrusive.js"></script>
        <script src="/Scripts/ttablejs.js"></script>
        <script src="/Scripts/bootstrap.js"></script>
        <script src="/Scripts/bootstrap-multiselect.js"></script>
    </div>
</body>
</html>
